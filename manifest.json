{
  "manifest_version": 3,
  "name": "Trimless for Gmail™ V3",
  "version": "1.0.0",
  "description": "Automatically show trimmed content in Gmail™.",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_title": "Trimless V3",
    "default_icon": {
      "19": "images/icon-action-19.png",
      "38": "images/icon-action-38.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/mail/*"],
      "js": ["vendor/jquery-3.7.1.min.js", "contentScript.js"],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": ["storage"],
  "host_permissions": ["https://mail.google.com/mail/*"],
  "short_name": "Trimless for Gmail",
  "browser_specific_settings": {
    "gecko": {
      "id": "trimlessgmailV3@rafvantongerloo.com"
    }
  }
}
